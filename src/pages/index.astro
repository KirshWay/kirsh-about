---
import { Image } from "astro:assets";
import GithubIcon from "../assets/icons/github.svg";
import InstagramIcon from "../assets/icons/instagram.svg";
import TelegramIcon from "../assets/icons/telegram.svg";
import XIcon from "../assets/icons/x.svg";

import AsciiImage from "../components/AsciiImage.astro";
import Layout from "../layouts/main.astro";

import { getUrl } from "../utils";
---

<Layout content={{ title: "Kirshway" }}>
  <main class="flex-auto min-w-0 mt-6 flex flex-col px-2 md:px-0">
    <div class="container mx-auto p-4 grow">
      <section class="gap-6 flex flex-col items-center sm:flex-row">
        <AsciiImage />
        <div class="flex flex-col gap-2">
          <h1 class="text-4xl font-bold">Kirshway</h1>
          <p class="text-lg font-semibold text-[#888]">Viktor Nemets</p>

          <div class="flex items-center gap-2">
            <span class="relative flex h-2 w-2">
              <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#a77fc5] opacity-75"
              ></span>
              <span
                class="relative inline-flex rounded-full h-2 w-2 bg-[#a77fc5]"
              ></span>
            </span>
            <p class="text-[#a77fc5] text-sm">
              Working on interesting projects
            </p>
          </div>

          <p class="text-sm">
            Graduate with a degree in “Information Systems and Technologies”.
            I’m passionate about technology and reading, occasionally getting
            immersed in books or gaming.
          </p>
        </div>
      </section>

      <div class="my-8 grid grid-cols-1 gap-8 md:grid-cols-2">
        <section>
          <p class="text-2xl font-semibold mb-6 text-[#a77fc5]">Work</p>
          <div class="mb-4">
            <a
              href="https://intelsy.ru/"
              class="text-xl font-semibold link-style"
              target="_blank"
              rel="noopener noreferrer"
            >
              Intelsy
            </a>
          </div>
        </section>

        <section>
          <p class="text-2xl font-semibold mb-6 text-[#a77fc5]">Projects</p>
          <a
            href="https://github.com/KirshWay"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span class="flex gap-2 items-center">
              <GithubIcon width="24" height="24" />
              all projects →
            </span>
          </a>
        </section>
      </div>

      <section class="flex flex-col gap-2 my-8">
        <p class="text-2xl font-semibold mb-6 text-[#a77fc5]">Coding stats</p>
        <Image width={72} height={72} src={getUrl("meme.gif")} alt="meme" />
      </section>

      <section class="flex flex-col gap-2 my-8">
        <p class="text-2xl font-semibold mb-6 text-[#a77fc5]">Socials</p>

        <ul class="flex gap-6 p-2 bg-[#655953] rounded-xl">
          <li>
            <a
              href="https://t.me/KirshWay"
              target="_blank"
              rel="noopener noreferrer"
            >
              <TelegramIcon width="24" height="24" />
            </a>
          </li>
          <li>
            <a
              href="https://x.com/NemetsViktor"
              target="_blank"
              rel="noopener noreferrer"
            >
              <XIcon width="24" height="24" />
            </a>
          </li>
          <li>
            <a
              href="https://www.instagram.com/kirshway/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <InstagramIcon width="24" height="24" />
            </a>
          </li>
        </ul>
      </section>
    </div>
  </main>
</Layout>
