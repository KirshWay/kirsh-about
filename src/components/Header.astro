---
import { getUrl } from "../utils";

const currentUrl = Astro.url.pathname;

const navLinks = [
  { href: getUrl(""), label: "Home" },
  { href: getUrl("blog"), label: "Blog" },
  { href: getUrl("books"), label: "Books" },
  { href: getUrl("cinema"), label: "Cinema" },
  { href: getUrl("games"), label: "Games" },
];
---

<header class="py-6">
  <nav
    class="container mx-auto px-4 py-2 flex justify-between bg-[#655953] rounded-xl"
  >
    <ul class="flex items-center gap-4 list-none">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={`link-style ${link.href === currentUrl ? "no-underline" : ""}`}
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
