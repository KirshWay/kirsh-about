---
import StarIcon from "../assets/icons/star.svg";

type Props = {
  rating: number;
  maxRating?: number;
  activeColor?: string;
  inactiveColor?: string;
};

const {
  rating,
  maxRating = 10,
  activeColor = "#e9d75a",
  inactiveColor = "#e0d6c3",
} = Astro.props;
---

<div class="flex gap-2">
  {
    Array.from({ length: maxRating }).map((_, index) => (
      <div
        class="w-4 h-4"
        style={
          index < rating ? `color: ${activeColor};` : `color: ${inactiveColor};`
        }
      >
        <StarIcon />
      </div>
    ))
  }
</div>
